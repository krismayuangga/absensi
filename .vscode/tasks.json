{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Flutter: Run Mobile App",
			"type": "shell",
			"command": "flutter",
			"args": [
				"run"
			],
			"options": {
				"cwd": "${workspaceFolder}/mobile"
			},
			"isBackground": true,
			"problemMatcher": [],
			"group": "build"
		},
		{
			"label": "Flutter: Build APK",
			"type": "shell",
			"command": "flutter",
			"args": [
				"build",
				"apk",
				"--debug"
			],
			"options": {
				"cwd": "${workspaceFolder}/mobile"
			},
			"isBackground": false,
			"problemMatcher": [],
			"group": "build"
		},
		{
			"label": "PHP: Serve Backend (Laravel)",
			"type": "shell",
			"command": "php",
			"args": [
				"artisan",
				"serve"
			],
			"options": {
				"cwd": "${workspaceFolder}/backend"
			},
			"isBackground": true,
			"problemMatcher": [],
			"group": "build"
		},
		{
			"label": "Composer: Install Backend Dependencies",
			"type": "shell",
			"command": "composer",
			"args": [
				"install"
			],
			"options": {
				"cwd": "${workspaceFolder}/backend"
			},
			"isBackground": false,
			"problemMatcher": [],
			"group": "build"
		},
		{
			"label": "ðŸ”’ Auto Git Backup",
			"type": "shell",
			"command": "powershell",
			"args": [
				"-Command", 
				"git add -A; git commit -m 'Auto backup - $(Get-Date -Format \"yyyy-MM-dd HH:mm:ss\")'; git push"
			],
			"group": "build",
			"presentation": {
				"echo": true,
				"reveal": "silent",
				"focus": false,
				"panel": "shared"
			},
			"problemMatcher": []
		},
		{
			"label": "ðŸ’¾ Quick Save to Git",
			"type": "shell", 
			"command": "powershell",
			"args": [
				"-Command",
				"$msg = Read-Host 'Commit message'; git add -A; git commit -m \"$msg\"; git push"
			],
			"group": "build",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": true,
				"panel": "new"
			}
		}
	]
}