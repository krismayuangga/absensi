# Contoh konfigurasi .env untuk Domainesia
APP_NAME="Attendance & KPI Management"
APP_ENV=production
APP_KEY=base64:XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX
APP_DEBUG=false
APP_URL=https://kpi.kinerja.io

LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

DB_CONNECTION=mysql
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=kinerja_attendance
DB_USERNAME=kinerja_dbuser
DB_PASSWORD=your_secure_password

BROADCAST_DRIVER=log
CACHE_DRIVER=file
FILESYSTEM_DISK=local
QUEUE_CONNECTION=sync
SESSION_DRIVER=file
SESSION_LIFETIME=120

# JWT Authentication
JWT_SECRET=XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX
JWT_TTL=60
JWT_BLACKLIST_ENABLED=true
JWT_BLACKLIST_GRACE_PERIOD=10

# Attendance Configuration
ATTENDANCE_GPS_RADIUS=100
ATTENDANCE_CAMERA_REQUIRED=true
ATTENDANCE_GEOLOCATION_REQUIRED=true

# KPI Configuration  
KPI_NOTIFICATION_ENABLED=true
KPI_AUTO_REMINDER=true
KPI_REMINDER_DAYS=7